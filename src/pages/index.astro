---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Ta Vue - Bienvenue">
  <Header />

  <section class="flex-1 bg-base-100">
    <div class="max-w-7xl mx-auto px-8 py-16">
      <div class="mb-12">
        <h1 class="text-5xl font-normal text-base-content mb-4">Bienvenue</h1>
        <div class="h-1 bg-accent w-full"></div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Left: Sign Up Form -->
        <div>
          <h2 class="text-2xl font-normal text-base-content mb-6">
            Vous êtes nouveau ? Créez un compte !
          </h2>

          <form id="signup-form" class="space-y-3">
            <div>
              <label class="block text-base text-base-content mb-2 font-normal"
                >Vos informations :</label
              >
              <input
                type="text"
                name="nom"
                placeholder="Nom"
                required
                class="input input-bordered w-full h-10 px-3"
              />
            </div>

            <input
              type="text"
              name="prenom"
              placeholder="Prénom"
              required
              class="input input-bordered w-full h-10 px-3"
            />

            <input
              type="text"
              name="username"
              placeholder="Nom d'utilisateur"
              required
              class="input input-bordered w-full h-10 px-3"
            />

            <input
              type="email"
              name="email"
              placeholder="E-mail"
              required
              class="input input-bordered w-full h-10 px-3"
            />

            <div>
              <label class="block text-base text-base-content mb-2 font-normal"
                >Créez votre mot de passe :</label
              >
              <input
                type="password"
                name="password"
                placeholder="Mot de passe"
                required
                class="input input-bordered w-full h-10 px-3"
              />
            </div>

            <input
              type="password"
              name="passwordConfirm"
              placeholder="Confirmez votre mot de passe"
              required
              class="input input-bordered w-full h-10 px-3"
            />

            <div id="signup-error" class="text-error text-sm hidden"></div>

            <button
              type="submit"
              class="btn btn-primary w-full mt-8 border-2 border-black h-10"
            >
              Inscription
            </button>
          </form>
        </div>

        <!-- Right: Login Form -->
        <div>
          <h2 class="text-2xl font-normal text-base-content mb-6">
            Vous avez déjà un compte ? Connectez vous !
          </h2>

          <form id="login-form" class="space-y-3">
            <input
              type="text"
              name="identity"
              placeholder="Identifiant"
              required
              class="input input-bordered w-full h-10 px-3"
            />

            <div>
              <input
                type="password"
                name="password"
                placeholder="Mot de passe"
                required
                class="input input-bordered w-full h-10 px-3"
              />
              <p class="text-xs text-base-content/60 mt-1">
                Mot de passe oublié
              </p>
            </div>

            <div id="login-error" class="text-error text-sm hidden"></div>

            <button
              type="submit"
              class="btn btn-primary w-full mt-8 border-2 border-black h-10"
            >
              Connexion
            </button>

            <div class="mt-10 pt-6 border-t border-base-300">
              <p class="text-base-content mb-4 font-normal">
                Se connecter avec Google :
              </p>
              <button
                type="button"
                class="flex items-center justify-center gap-3 w-full bg-accent hover:bg-accent/90 text-accent-content px-4 py-2 rounded transition h-10"
              >
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                  <path
                    d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                  ></path>
                  <path
                    d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                  ></path>
                  <path
                    d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                  ></path>
                  <path
                    d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                  ></path>
                </svg>
                <span>Google</span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  import pb from "../lib/pocketbase";

  // Handle Sign Up Form
  const signupForm = document.getElementById("signup-form") as HTMLFormElement;
  const signupError = document.getElementById("signup-error") as HTMLDivElement;

  signupForm?.addEventListener("submit", async (e) => {
    e.preventDefault();
    signupError.classList.add("hidden");

    const formData = new FormData(signupForm);
    const data = {
      username: formData.get("username") as string,
      email: formData.get("email") as string,
      emailVisibility: true,
      password: formData.get("password") as string,
      passwordConfirm: formData.get("passwordConfirm") as string,
      nom: formData.get("nom") as string,
      prenom: formData.get("prenom") as string,
    };

    try {
      console.log("[v0] Attempting to create user:", data.username);

      // Create the user
      const record = await pb.collection("users").create(data);
      console.log("[v0] User created successfully:", record);

      // Automatically log in after signup
      await pb.collection("users").authWithPassword(data.email, data.password);
      console.log("[v0] User logged in after signup");

      // Redirect or show success message
      alert("Inscription réussie ! Vous êtes maintenant connecté.");
      window.location.reload();
    } catch (error: any) {
      console.error("[v0] Signup error:", error);
      signupError.textContent =
        error.message || "Une erreur est survenue lors de l'inscription.";
      signupError.classList.remove("hidden");
    }
  });

  // Handle Login Form
  const loginForm = document.getElementById("login-form") as HTMLFormElement;
  const loginError = document.getElementById("login-error") as HTMLDivElement;

  loginForm?.addEventListener("submit", async (e) => {
    e.preventDefault();
    loginError.classList.add("hidden");

    const formData = new FormData(loginForm);
    const identity = formData.get("identity") as string;
    const password = formData.get("password") as string;

    try {
      console.log("[v0] Attempting to login with identity:", identity);

      // Authenticate with email or username
      await pb.collection("users").authWithPassword(identity, password);
      console.log("[v0] User logged in successfully");

      // Redirect or show success message
      alert("Connexion réussie !");
      window.location.reload();
    } catch (error: any) {
      console.error("[v0] Login error:", error);
      loginError.textContent = "Identifiant ou mot de passe incorrect.";
      loginError.classList.remove("hidden");
    }
  });
</script>
